{
  "name": "photobooth-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "commonjs",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --exit-child --watch src src/server.ts | pino-pretty",
    "format": "prettier --write --ignore-path .gitignore . '!pnpm-lock.yaml'",
    "format:check": "prettier --check --ignore-path  .gitignore . '!pnpm-lock.yaml'",
    "lint": "eslint --fix --ignore-path .gitignore --ignore-path pnpm-lock.yaml .",
    "lint:check": "eslint --ignore-path .gitignore --ignore-path pnpm-lock.yaml .",
    "types:check": "tsc --noEmit"
  },
  "prisma": {
    "schema": "src/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "3.11.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "decimal.js": "^10.3.1",
    "dotenv": "^16.0.0",
    "express": "5.0.0-beta.1",
    "hashids": "^2.2.10",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.4",
    "pino": "^7.9.2",
    "prisma": "^3.11.1",
    "zod": "^3.14.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "pino-pretty": "^7.6.0",
    "prettier": "^2.6.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3",
    "zod-prisma": "^0.5.4"
  }
